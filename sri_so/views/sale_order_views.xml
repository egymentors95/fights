<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="total_view_order_form" model="ir.ui.view">
        <field name="name">total.view.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='order_line']/list//field[@name='price_unit']" position="before">
                <field name="sri_total"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/list//field[@name='price_unit']" position="after">
                <field name="piece_price"/>
            </xpath>

        </field>
    </record>

</odoo>