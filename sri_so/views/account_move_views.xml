<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Inherit Form View to Modify it -->
    <record id="total_view_move_form" model="ir.ui.view">
        <field name="name">total.view.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='invoice_line_ids']/list//field[@name='quantity']" position="after">
                <field name="sri_total"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/list//field[@name='price_unit']" position="after">
                <field name="piece_price"/>
            </xpath>

        </field>
    </record>

</odoo>