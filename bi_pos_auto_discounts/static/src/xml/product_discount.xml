<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="point_of_sale.ProductCard" t-inherit="point_of_sale.ProductCard" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('product-information-tag')]" position="before">
            <t t-set="discount_val" t-value="pos.models['product.product'].getBy('id', props.productId)"/>
            <t t-if="pos.config.allow_automatic_discount === true">
                <t t-if="discount_val.discount != 0">
                    <div class="product-happy-hours mt-5 p-1">
                        <t t-esc="discount_val.discount"/>
                        <t>%</t>
                    </div>
                </t>
            </t>
        </xpath>
    </t>
</templates>
    
